extends layout.pug

block content
  h1 Return Book
  p
    strong Book Title: 
    | #{book_title}
  p
    strong Loaned By: 
    | #{patron_fullname}
  p
    strong Loaned On: 
    | #{loaned_on}
  p
    strong Return By: 
    | #{return_by}
  form(method='post')
    p
      label(for='returned_on') Returned on:
      input#returned_on(type='text', name='returned_on', value=returned_on )
    p
      input(type='submit', value='Return Book')
